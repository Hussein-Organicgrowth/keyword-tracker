<!DOCTYPE html>
<html>
<head>
  <title>Keywords for <%= company.companyName %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #F8F5ED;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .card {
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    
    .card-header {
      background-color: #3E503C;
      border-bottom: 1px solid #e9ecef;
      padding: 10px 15px;
      border-radius: 5px 5px 0 0;
      color: #F8F5ED;
    }
    
    .card-header .btn {
      color: #F8F5ED;
      font-weight: bold;
      text-decoration: none;
    }
    
    .card-body {
      padding: 15px;
    }
    
    .table {
      width: 100%;
      margin-bottom: 1rem;
      color: #212529;
    }
    
    .table th,
    .table td {
      padding: 0.75rem;
      vertical-align: top;
      border-top: 1px solid #dee2e6;
    }
    
    .table thead th {
      vertical-align: bottom;
      border-bottom: 2px solid #dee2e6;
      background-color: #3E503C;
      color: #F8F5ED;
    }
    
    .table tbody + tbody {
      border-top: 2px solid #dee2e6;
    }
    
    .btn {
      display: inline-block;
      font-weight: 400;
      color: #212529;
      text-align: center;
      vertical-align: middle;
      cursor: pointer;
      padding: 0.375rem 0.75rem;
      font-size: 1rem;
      line-height: 1.5;
      border-radius: 0.25rem;
      transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    
    .btn-primary {
      color: #F8F5ED;
      background-color: #3E503C;
      border-color: #3E503C;
    }
    
    .btn-danger {
      color: #F8F5ED;
      background-color: #dc3545;
      border-color: #dc3545;
    }
    </style>
</head>
<body>
  <div class="container mt-5" id="accordionExample">
    <h1 class="text-center">Keywords for <%= company.companyName %></h1>
    <% var categories = [...new Set(company.keywords.map(keywordObj => keywordObj.category.toLowerCase().trim()))]; %>
    <% categories.forEach(function(category, index) { %>
      <div class="card mt-4">
        <div class="card-header" id="heading<%= index %>">
          <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
              <%= category.charAt(0).toUpperCase() + category.slice(1) %>
            </button>
          </h2>
        </div>
        <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordionExample">
          <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Keyword</th>
                    <th scope="col">Language</th>
                    <th scope="col">URL</th>
                    <th scope="col">Last Checked</th>
                    <th scope="col">Placement</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% company.keywords.filter(keywordObj => keywordObj.category.toLowerCase().trim() === category).forEach(function(keywordObj) { %>
                    <tr>
                      <td><%= keywordObj.keyword %></td>
                      <td><%= keywordObj.language %></td>
                      <td><%= keywordObj.url %></td>
                      <td><%= keywordObj.lastChecked %></td>
                      <td><%= keywordObj.placements[keywordObj.placements.length - 1].rank %></td>
                      <td>
                        <button class="btn btn-primary">Update</button>
                        <button class="btn btn-danger">Delete</button>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>